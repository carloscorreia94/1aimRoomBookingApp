<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_list_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:id="@+id/equipmentListKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/text_list_detail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/rooms_detail_list_equipment_key"/>

        <TextView
            android:id="@+id/equipmentListValue"
            android:layout_width="wrap_content"
            android:textColor="@color/text_list_values"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/equipmentListKey" />

        <TextView
            android:id="@+id/availabilityListKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/text_list_detail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/rooms_detail_list_availability_key"/>

        <TextView
            android:id="@+id/availabilityListValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_list_values"
            android:textSize="19sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/availabilityListKey" />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/text_list_detail"
            android:text="@string/rooms_detail_list_pictures_key"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.oneaim.roombooking.views.NonScrollableGridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="0dp"
            android:horizontalSpacing="0dp"
            android:stretchMode="columnWidth"
            android:numColumns="2" />
    </FrameLayout>

</LinearLayout>
