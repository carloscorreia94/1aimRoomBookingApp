<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_list_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.RoomsActivity"
    tools:showIn="@layout/activity_rooms"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:background="@color/background_head_rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/filter_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_rooms_filter"
            android:textSize="17sp"
            android:textColor="@color/text_list_detail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/filter_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/activity_rooms_filter_room_name_hint"
            android:background="#fff"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_toRightOf="@id/filter_desc"
            android:layout_toEndOf="@id/filter_desc"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:padding="3dp"
            android:focusable="true"/>
        <CheckedTextView
            android:gravity="center"
            android:textAlignment="gravity"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            android:text="@string/activity_rooms_filter_available_one_hour"
            android:textColor="@color/text_list_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:enabled="false" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true">
        <ExpandableListView
            android:padding="16dp"
            android:visibility="gone"
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null">
        </ExpandableListView>
        <ProgressBar android:id="@+id/loading_progress" style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
