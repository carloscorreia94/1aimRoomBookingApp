<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_send_pass_passes"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="10dp">
    <EditText android:id="@+id/pass_person_name" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sendpass_passes_name_hint"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/text_list_values"
        android:textColor="@color/text_list_detail"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp" />
    <EditText android:id="@+id/pass_email" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sendpass_passes_email_hint"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColorHint="@color/text_list_values"
        android:textColor="@color/text_list_detail"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp" />
    <EditText android:id="@+id/pass_phone" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sendpass_passes_phone_hint"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="phone"
        android:textColorHint="@color/text_list_values"
        android:textColor="@color/text_list_detail"
        android:textSize="16sp"
        android:imeOptions="actionDone"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp" />
    <Button
        android:id="@+id/add_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sendpass_passes_add_person"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendpass_passes_person_desc"
        android:textColor="@color/colorAccent"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/person_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>